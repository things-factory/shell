{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "module": "commonjs",
    "target": "ES2016",
    "outDir": "./dist-server",
    "removeComments": true,
    "sourceMap": true,
    "pretty": true,
    "baseUrl": "./",
    "lib": ["dom", "esnext", "dom.iterable", "scripthost", "esnext.asynciterable", "es7", "es2018"],
    "paths": {
      "*": ["*"],
      "@things-factory/shell": ["."]
    }
  },
  "include": ["server"],
  "exclude": ["**/*.spec.ts", "node_modules"]
}
